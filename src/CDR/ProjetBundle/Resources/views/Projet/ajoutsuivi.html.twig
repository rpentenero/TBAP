{% extends "CDRProjetBundle::layout.html.twig" %}

{% block projet_body %}
<script>
        $(document).ready(function(){

        $('.js-datepicker').datepicker({
            format: 'mm/dd/yyyy',
            todayHighlight: true,
        });
    });
</script>

    <div class="well">

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.Date, "Date : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.Date) }}        
            {# Génération de l'input. #}
            <div class="col-sm-6">
                {{ form_widget(form.Date) }}
            </div>
        </div>

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.Moyen, "Moyen : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.Moyen) }}
            <div class="col-sm-6">
                {# Génération de l'input. #}
                {{ form_widget(form.Moyen, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.Contenu, "Contenu : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.Contenu) }}
            <div class="col-sm-6">
                {# Génération de l'input. #}
                {{ form_widget(form.Contenu, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.Fichier, "PJ : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.Fichier) }}
            <div class="col-sm-6">
                {# Génération de l'input. #}
                {{ form_widget(form.Fichier, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
        <div style="text-align:center">
            {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-dark'}}) }}
        </div>

        {# Génération automatique des champs pas encore écrits.
           Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
           et tous les champs cachés (type « hidden »). #}
        {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}

    </div>
    <a href="{{path('cdr_projet_consulter',{'id': projet.id}) }}"> <button type="button" class="btn btn-dark">Revenir au projet</button> </a>

{% endblock %}
