{# src/CDR/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "::connect.html.twig" %}

{% block body %}

    {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
    <div class="container">
        {# S'il y a une erreur, on l'affiche dans un joli cadre #}

        <div class="row">
            <div class="col-md-offset-4 col-md-4">
                <div class="form-login" style="margin-top: 20%; background-color: #EDEDED; padding-top: 10px; padding-bottom: 20px; padding-left: 20px; padding-right: 20px; border-radius: 15px; border-color:#d2d2d2; border-width: 5px; box-shadow:0 1px 0 #cfcfcf;">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.message }}</div>
                    {% endif %}
                    <h4 style="border:0 solid #fff; border-bottom-width:1px; padding-bottom:10px; text-align: center;">Bienvenue</h4>
                    <form action="{{ path('fos_user_security_check') }}" method="post">
                        <input class="form-control input-sm chat-input" type="text" id="username" name="_username" placeholder="Identifiant" /> <br>
                        <input class="form-control input-sm chat-input" type="password" id="password" name="_password" placeholder="Mot de passe" /> <br>
                        <input class="btn btn-dark" type="submit" value="Connexion" style="margin-left: 30%;margin-right: 30%;" />
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}